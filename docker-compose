version: "3.8"
services:
  selenium:
    image: selenium/standalone-chrome:latest
    shm_size: "2gb"         # prevents Chrome crashing on big pages
    ports:
      - "4444:4444"         # WebDriver endpoint
      - "7900:7900"         # noVNC browser viewer (UI!)
    environment:
      - SE_NODE_MAX_SESSIONS=1
      - SE_NODE_SESSION_TIMEOUT=1200

  tests:
    build: .
    depends_on:
      - selenium
    environment:
      SELENIUM_REMOTE_URL: "http://selenium:4444/wd/hub"
    volumes:
      - ./target:/app/target
